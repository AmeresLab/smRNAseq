process {
    executor = "sge"

    $extractHairpins {
        module = "bedtools/2.26.0:samtools/1.4"
    }

    $makeIndex {
        module = "bowtie/1.2:samtools/1.4"
    }

    $trim_adapter {
        module = "python/2.7.3"
    }

    $trim_4N {
        process.container = "dukegcb/seqtk:latest"
        docker.enabled = true
    }

    $bowtie_hairpins {
        module = "bowtie/1.2:mawk/1.3.4-20150503:samtools/1.4"
        cpus = 6
        penv = "smp"
    }

    $post_alignment {
        module = "samtools/1.4"
    }

    $writeJson {
        module = "python/2.7.3"
    }

    $alignmentStats {
        cpus = 10
        module = "R/3.4.0"
    }

    $mutationStats {
        cpus = 12
        module = "R/3.4.0"
    }
}
